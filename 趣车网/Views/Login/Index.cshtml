
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/bootstrapValidator.js"></script>
<center>
<div class="jumbotron">
     <h2 class="col-md-offset-5">欢迎登陆</h2>
</div>

<div class="col-md-offset-4 col-md-4">
    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal", id = "loginForm" }))
    {
        <div class="form-group">
            <label class="control-label col-md-3">*用户名</label>
            <div class="col-md-6">
                <input class="form-control" type="text" name="UserName" id="UserName" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">*密码</label>
            <div class="col-md-6">
                <input class="form-control" type="password" name="password" id="Password" />
            </div>
        </div>
        <div class="col-md-offset-3">
            <button type="submit" class="btn btn-info col-md-6" style="margin-left:25px">登陆</button>
        </div>
    }
</div>
</center>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#loginForm").bootstrapValidator({
                message: 'This value is not valid',
                feedbackIcons: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },
                fields: {
                    UserName: {
                        validators: {
                            notEmpty: {
                                message: "账号不能为空"
                            }
                        }
                    },
                    password: {
                        validators: {
                            notEmpty: {
                                message: "密码不能为空"
                            },
                            stringLength: {
                                min: 6,
                                max: 18,
                                message: "密码长度必须为6-18位"
                            },
                            different: {
                                field: "userId",
                                message: "密码和账号不能相等"
                            }
                        }
                    }
                }
            })
        })
    </script>
